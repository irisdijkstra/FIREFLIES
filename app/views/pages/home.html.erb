<% if current_user %>
<h1>My timeline</h1>
  <% @fireflies.each do |firefly| %>
     <div class="item" style="width: max-content;" >
      <div class="hover-links">
      <%= if firefly.date_recieve <= Date.today
            link_to "FIREFLY", firefly_path(firefly)
          else
           link_to "FIREFLY"
          end
           %>
       <div style="display: none;">
        <%= firefly.date_recieve.strftime('%d %b %Y') %>
       </div>
      </div>
     </div>
  <% end %>
</div>
<%= link_to "Create a firefly", new_message_path%>
<% else %>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://static.boredpanda.com/blog/wp-content/uploads/2016/07/fireflies-long-exposure-photography-2016-japan-10.jpg); height=200px;">
  <div class="container-banner">
    <h1>A way to connect through time !</h1>
    <a class="cta-white" href="#">SIGN UP</a>
  </div>
</div>
<%= render "shared/card" %>
  <div class="container-home">
    <div id="timeline">
    </div>
  </div>
  <div class="container-customer">
    <h2>What our customers say:</h2>
    <h5>It is so nice to receive an unexpected firefly - Joyce</h5>
    <h5>Such a wonderful app - Andrea</h5>
    <h5>I use it as my journal every day - Mark</h5>
  </div>
  <div class="container-home">
    <div id="timeline">
    </div>
  </div>
  <div class="last-section">
    <img src="https://i.pinimg.com/474x/02/23/77/022377a926ea7be2c86882f865602558.jpg" alt="Fireflies" style="border-radius: 5px; ">
      <div class="last-section-infos">
        <h5>Fireflies helps you</h5>
        <h2>Send messages to loved ones in the future.</h2>
        <p>Weather you want to create a digital journal for yourself or send a time capsule to a loved one.</p>
        <a href="#" class="cta-yellow">LEARN MORE</a>
      </div>
  </div>

<% end %>
