<div class="container-messages">
  <%= simple_form_for [@user, @message] do |f| %>
    <%#= f.label :recipients %>
    <div class="add-mails">
      <input type="text" name="emails[]" class="add-mails-input">
      <div class="btn-form-blue position-fixed">Add Email</div>
    </div>

    <div class="show-wrapper">
      <div class="media-wrapper d-flex justify-content-center">
        <div id="pencil" onclick="clickInput('image')"> <%=  image_tag("pencil.png", size: '50').html_safe %></div>
        <%=  image_tag("image.png", size: '50').html_safe %>
        <%=  image_tag("video.png", size: '50').html_safe %>
        <%=  image_tag("music.png", size: '50').html_safe %>
      </div>
      <div class="media-wrapper d-flex d-none">
        <%= f.input :letter, label: image_tag("pencil.png", size: '50').html_safe %>
        <%= f.input :image, input_html: { id: "image" }, as: :file, label: image_tag("image.png", size: '50').html_safe %>
        <%= f.input :video, label: image_tag("video.png", size: '50').html_safe %>
        <%= f.input :audio, class: "img-btn", label: image_tag("music.png", size: '50').html_safe %>
      </div>

      <%= f.submit "Create a Message", class: "btn-white"%>
    </div>
  <% end %>

  <script type="text/javascript" charset="utf-8">
      function clickInput(target) {
          document.querySelector('#image').click();
      }

