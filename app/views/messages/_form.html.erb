<div class="container-messages">
  <%= simple_form_for [@user, @message] do |f| %>
    <%#= f.label :recipients %>
    <div class="add-mails">
      <input type="text" name="emails[]" class="add-mails-input">
      <div class="btn-form-blue position-fixed">Add Email</div>
    </div>

    <div class="show-wrapper">
      <div class="media-wrapper d-flex justify-content-center">
        <%=  image_tag("pencil.png", size: '50', class: "form-img", id: "letter").html_safe %>
        <%=  image_tag("image.png", size: '50', class: "form-img", id: "image").html_safe %>
        <%=  image_tag("video.png", size: '50', class: "form-img", id: "video").html_safe %>
        <%=  image_tag("music.png", size: '50', class: "form-img", id: "audio").html_safe %>
      </div>
      <div class="media-wrapper d-flex">
        <%= f.input :letter, input_html: { class: "d-none" } %>
        <%= f.input :image, as: :file, input_html: { class: "d-none" }%>
        <%= f.input :video, as: :file, input_html: { class: "d-none" } %>
        <%= f.input :audio, as: :file, input_html: { class: "d-none" } %>
      </div>

      <%= f.submit "Create a Message", class: "btn-white"%>
    </div>
  <% end %>

</div>

